<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hakka.tour.mapper.RouteMapper">

    <resultMap id="BaseResultMap" type="com.hakka.tour.entity.Route">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="days" property="days"/>
        <result column="budget" property="budget"/>
        <result column="people_count" property="peopleCount"/>
        <result column="route_data" property="routeData"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insert" parameterType="com.hakka.tour.entity.Route" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO route (user_id, name, description, days, budget, people_count, route_data, status, create_time, update_time)
        VALUES (#{userId}, #{name}, #{description}, #{days}, #{budget}, #{peopleCount}, #{routeData}, #{status}, #{createTime}, #{updateTime})
    </insert>

    <update id="update" parameterType="com.hakka.tour.entity.Route">
        UPDATE route
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="description != null">description = #{description},</if>
            <if test="days != null">days = #{days},</if>
            <if test="budget != null">budget = #{budget},</if>
            <if test="peopleCount != null">people_count = #{peopleCount},</if>
            <if test="routeData != null">route_data = #{routeData},</if>
            <if test="status != null">status = #{status},</if>
            update_time = #{updateTime}
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById" parameterType="java.lang.Long">
        DELETE FROM route WHERE id = #{id}
    </delete>

    <select id="selectById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT * FROM route WHERE id = #{id}
    </select>

    <select id="selectByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT * FROM route WHERE user_id = #{userId} ORDER BY create_time DESC
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT * FROM route ORDER BY create_time DESC
    </select>

</mapper>
